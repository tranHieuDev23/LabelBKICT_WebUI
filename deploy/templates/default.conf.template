server {
  listen       80;
  listen  [::]:80;
  client_max_body_size 5M;

  location /api {
    proxy_pass http://${GATEWAY_HOST}:${GATEWAY_PORT}/api;
  }

  location /kibana {
    proxy_pass http://${KIBANA_HOST}:${KIBANA_PORT}/kibana;
  }

  location / {
    try_files $uri $uri/ /index.html;
    root /usr/app;
    expires 1y;
  }
}
