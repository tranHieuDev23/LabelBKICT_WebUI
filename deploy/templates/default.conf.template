server {
  listen       80;
  listen  [::]:80;
  client_max_body_size 10M;

  location /api {
    proxy_pass http://${GATEWAY_HOST}:${GATEWAY_PORT}/api;
  }

  location /kibana {
    proxy_pass http://${KIBANA_HOST}:${KIBANA_PORT}/kibana;
  }

  location /static/ {
    limit_except GET {
      deny all;
    }

    proxy_pass http://${S3_HOST}:${S3_PORT}/;
    expires 1y;
  }

  location / {
    try_files $uri $uri/ /index.html;
    root /usr/app;
    expires 1y;
  }
}
